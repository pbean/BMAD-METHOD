            EditorGUILayout.PropertyField(slotProp.FindPropertyRelative("{{slot_type_field}}"), GUIContent.none, GUILayout.Width(100));
            EditorGUILayout.PropertyField(equippedItem, GUIContent.none);
            
            // [[LLM: Remove slot button.]]
